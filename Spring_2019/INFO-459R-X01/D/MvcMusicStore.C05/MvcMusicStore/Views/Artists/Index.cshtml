@model IEnumerable<MvcMusicStore.Models.Artist>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="clearfix">
    @using (Html.BeginForm("Search", "Artists", FormMethod.Get, new { @class = "form-inline" }))
    {
        <input class="form-control" type="text" name="artistName" placeholder="Search Artist Name" />
        <input class="btn btn-default" type="submit" value="Search" />
    }
    @*<form action="/Artists/Search" method="get" class="form-inline"></form>*@
</div>
<br/>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ArtistId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ArtistId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ArtistId })
        </td>
    </tr>
}

</table>
